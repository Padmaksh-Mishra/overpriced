datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id       Int              @id @default(autoincrement())
  name     String
  requests ProductRequest[] // Relationship to ProductRequest
  posts    Post[] // Relationship to Post
}

model ProductRequest {
  id           Int   @id @default(autoincrement())
  productId    Int
  userId       Int
  desiredPrice Int

  product Product @relation(fields: [productId], references: [id])
  user    User    @relation(fields: [userId], references: [id])

  @@unique([productId, userId]) // Ensures one request per user per product
}

model Post {
  id          Int    @id @default(autoincrement())
  productId   Int
  userId      Int
  textContent String
  likes       Int    @default(0)
  dislikes    Int    @default(0)

  product Product @relation(fields: [productId], references: [id])
  user    User    @relation(fields: [userId], references: [id])
}

model User {
  id        Int              @id @default(autoincrement())
  email     String           @unique
  name      String?
  password  String           // Ensure the type for password is specified
  posts     Post[]           // Relationship to Post
  requests  ProductRequest[] // Relationship to ProductRequest
}